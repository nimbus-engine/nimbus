<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="JSON Test"
    Width="400"
    Height="300"
    Background="#1E1E1E"
    Foreground="#FFFFFF"
    WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="JSON Plugin Test" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#FFFFFF" />
        <TextBlock Text="Input JSON:" Foreground="Gray" />
        <Border Width="Auto" Height="Auto"
                Margin="0,5,0,10" Background="Transparent">
            <TextBox
                Name="txtJson"
                FontSize="14"
                FontFamily="Segoe UI"
                Foreground="#FFFFFF"
                Background="Transparent"
                BorderThickness="0"
                CaretBrush="#FFFFFF"
                SelectionBrush="#0078D4"
                VerticalContentAlignment="Center"
                TextWrapping="NoWrap"
                >
                <TextBox.Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TextBox}">
                                    <Border x:Name="OuterBorder"
                                            Background="#2D2D2D"
                                            CornerRadius="6"
                                            BorderBrush="#5D5D5D"
                                            BorderThickness="1">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost"
                                                          Margin="10,8"
                                                          VerticalAlignment="Center"
                                                          Focusable="False"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#7D7D7D"/>
                                        </Trigger>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#0078D4"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="OuterBorder" Property="Background" Value="#252525"/>
                                            <Setter TargetName="OuterBorder" Property="BorderBrush" Value="#3D3D3D"/>
                                            <Setter Property="Foreground" Value="#6D6D6D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Border>
        <TextBlock Text="Result (Name):" Foreground="Gray" />
        <TextBlock Name="lblName" Text="--" FontSize="18" FontWeight="Bold" Margin="0,5,0,10" Foreground="#FFFFFF" />
        <TextBlock Text="Result (City):" Foreground="Gray" />
        <TextBlock Name="lblCity" Text="--" FontSize="18" FontWeight="Bold" Margin="0,5,0,20" Foreground="#FFFFFF" />
        <Button
            Name="pas"
            Width="Auto" Height="Auto"
            Margin="0"
            FontSize="14" FontWeight="Normal"
            FontFamily="Segoe UI"
            Foreground="#FFFFFF"
            Cursor="Hand"
            IsEnabled="True">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="#3D3D3D"
                            CornerRadius="6"
                            BorderBrush="#5D5D5D"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="ContentArea"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="16,8"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#4D4D4D"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#2D2D2D"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#0078D4"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#2D2D2D"/>
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#3D3D3D"/>
                            <Setter Property="Foreground" Value="#6D6D6D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            Parse Again
        </Button>
    </StackPanel>
</Window>
