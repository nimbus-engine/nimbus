                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Fade In/Out" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Opacity animation" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Scale -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnScale" onClick="AnimateScale">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#3B82F620">
                                        <TextBlock Text="ðŸ”" FontSize="18"
                                                   HorizontalAlignment="Center"
