                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Scale / Zoom" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Size animation" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Rotate -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnRotate" onClick="AnimateRotate">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#10B98120">
                                        <TextBlock Text="ðŸ”„" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Rotate" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Rotation animation" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Section: Movement -->
                            <TextBlock Text="MOVEMENT" FontSize="10" 
                                       FontWeight="Bold" Foreground="#6B7280"
                                       Margin="4,20,0,12"/>

                            <!-- Slide -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnSlide" onClick="AnimateSlide">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#F59E0B20">
                                        <TextBlock Text="âž¡ï¸" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Slide" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Position animation" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Bounce -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnBounce" onClick="AnimateBounce">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#EF444420">
                                        <TextBlock Text="âš½" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Bounce" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Elastic effect" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Section: Colors -->
                            <TextBlock Text="COLOR  EFFECTS" FontSize="10" 
                                       FontWeight="Bold" Foreground="#6B7280"
                                       Margin="4,20,0,12"/>

                            <!-- Color Change -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnColor" onClick="AnimateColor">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#EC489920">
                                        <TextBlock Text="ðŸŽ¨" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Color Change" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Background animation" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Pulse -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnPulse" onClick="AnimatePulse">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#06B6D420">
                                        <TextBlock Text="ðŸ’“" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Pulse" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Heartbeat effect" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Shake -->
                            <Border Background="#1A1A24" CornerRadius="12" 
                                    Padding="16" Margin="0,0,0,8" Cursor="Hand"
                                    Name="btnShake" onClick="AnimateShake">
                                <Grid>
                                    <Grid.ColumnDefinitions>Auto, *</Grid.ColumnDefinitions>
                                    <Border Width="40" Height="40" CornerRadius="10"
                                            Background="#F97316">
                                        <TextBlock Text="ðŸ“³" FontSize="18"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Shake" FontSize="14"
                                                   FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                        <TextBlock Text="Vibration effect" FontSize="11"
                                                   Foreground="#6B7280"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Reset Button -->
                    <Border Grid.Row="2" Padding="16">
                        <Button Name="btnReset" Content="ðŸ”„ Reset All"
                                Background="#EF4444" Foreground="White"
                                CornerRadius="10" Padding="0,14"
                                FontSize="14" FontWeight="SemiBold"
                                HoverColor="#DC2626"
                                onClick="ResetAll"/>
                    </Border>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!--              MAIN CANVAS                -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>Auto, *, Auto</Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#0F0F15" Padding="24,16"
                        BorderBrush="#1E1E2E" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>*, Auto</Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Name="lblAnimTitle" Text="Welcome!"
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="#FFFFFF"/>
                            <TextBlock Name="lblAnimDesc" 
                                       Text="Select an animation from the sidebar"
                                       FontSize="13" Foreground="#6B7280"/>
                        </StackPanel>

                        <!-- Speed Controls -->
                        <Border Grid.Column="1" Background="#1A1A24" 
                                CornerRadius="8" Padding="4">
                            <StackPanel Orientation="Horizontal">
                                <Button Name="btnSlow" Content="0.5x"
                                        Background="Transparent" Foreground="#6B7280"
                                        Padding="12,8" FontSize="12"
                                        onClick="SetSpeedSlow"/>
                                <Button Name="btnNormal" Content="1x"
                                        Background="#8B5CF6" Foreground="White"
                                        Padding="12,8" FontSize="12" CornerRadius="6"
                                        onClick="SetSpeedNormal"/>
                                <Button Name="btnFast" Content="2x"
                                        Background="Transparent" Foreground="#6B7280"
                                        Padding="12,8" FontSize="12"
                                        onClick="SetSpeedFast"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Animation Stage -->
                <Border Grid.Row="1" Background="#0A0A0F" Padding="40">
                    <Grid>
                        <!-- Grid Pattern Background -->
                        <Border Background="#0F0F18" CornerRadius="20" 
                                BorderBrush="#1E1E2E" BorderThickness="1">
                            
                            <!-- Center Content -->
                            <Grid>
                                <!-- Main Animated Object -->
                                <Border Name="animBox" 
                                        Width="150" Height="150"
                                        CornerRadius="20"
                                        Background="#8B5CF6"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <StackPanel VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                        <TextBlock Name="animEmoji" Text="âœ¨" 
                                                   FontSize="48"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Name="animLabel" Text="Nimbus"
                                                   FontSize="16" FontWeight="Bold"
                                                   Foreground="White"
                                                   TextAlignment="Center"
                                                   Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Floating Elements (for complex animations) -->
                                <Border Name="floatBall1" Width="30" Height="30"
                                        CornerRadius="15" Background="#3B82F6"
                                        HorizontalAlignment="Left" VerticalAlignment="Top"
                                        Margin="80,100,0,0" Opacity="0.6"/>

                                <Border Name="floatBall2" Width="20" Height="20"
                                        CornerRadius="10" Background="#10B981"
                                        HorizontalAlignment="Right" VerticalAlignment="Top"
                                        Margin="0,120,100,0" Opacity="0.6"/>

                                <Border Name="floatBall3" Width="25" Height="25"
                                        CornerRadius="12" Background="#F59E0B"
                                        HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                        Margin="120,0,0,80" Opacity="0.6"/>

                                <Border Name="floatBall4" Width="18" Height="18"
                                        CornerRadius="9" Background="#EC4899"
                                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                        Margin="0,0,80,120" Opacity="0.6"/>
                            </Grid>
                        </Border>

                        <!-- Animation Status -->
                        <Border Background="#1A1A24" CornerRadius="10"
                                Padding="12,8" HorizontalAlignment="Center"
                                VerticalAlignment="Bottom" Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal">
                                <Border Name="statusDot" Width="8" Height="8"
                                        CornerRadius="4" Background="#10B981"
                                        Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Name="lblStatus" Text="Ready"
                                           FontSize="12" Foreground="#9CA3AF"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Footer Stats -->
                <Border Grid.Row="2" Background="#0F0F15" Padding="20,12"
                        BorderBrush="#1E1E2E" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>*, *, *, *</Grid.ColumnDefinitions>

                        <!-- Duration -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Duration" FontSize="10" 
                                       Foreground="#6B7280" TextAlignment="Center"/>
                            <TextBlock Name="lblDuration" Text="500ms" FontSize="16" 
                                       FontWeight="Bold" Foreground="#8B5CF6"
                                       TextAlignment="Center"/>
                        </StackPanel>

                        <!-- Easing -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Easing" FontSize="10" 
                                       Foreground="#6B7280" TextAlignment="Center"/>
                            <TextBlock Name="lblEasing" Text="EaseOut" FontSize="16" 
                                       FontWeight="Bold" Foreground="#3B82F6"
                                       TextAlignment="Center"/>
                        </StackPanel>

                        <!-- Property -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Property" FontSize="10" 
                                       Foreground="#6B7280" TextAlignment="Center"/>
                            <TextBlock Name="lblProperty" Text="â€”" FontSize="16" 
                                       FontWeight="Bold" Foreground="#10B981"
                                       TextAlignment="Center"/>
                        </StackPanel>

                        <!-- Play Count -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="Played" FontSize="10" 
                                       Foreground="#6B7280" TextAlignment="Center"/>
                            <TextBlock Name="lblPlayCount" Text="0" FontSize="16" 
                                       FontWeight="Bold" Foreground="#F59E0B"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </UI>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <!--                    LOGIC                    -->
    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <Logic>
        <!-- State Variables -->
        <Var Name="playCount" Value="0" Type="int"/>
        <Var Name="animSpeed" Value="500" Type="int"/>
        <Var Name="isAnimating" Value="false" Type="bool"/>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--           INITIALIZE               -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Handler Name="OnAppLoad">
            <Set Target="lblStatus" Property="Text" Value="Ready"/>
            <Set Target="lblPlayCount" Property="Text" Value="0"/>
            <Set Target="animBox" Property="Opacity" Value="1"/>
        </Handler>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--          SPEED CONTROLS            -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Handler Name="SetSpeedSlow">
            <Set Var="animSpeed" Value="1000"/>
            <Set Target="lblDuration" Property="Text" Value="1000ms"/>
            <Set Target="btnSlow" Property="Background" Value="#8B5CF6"/>
            <Set Target="btnSlow" Property="Foreground" Value="White"/>
            <Set Target="btnNormal" Property="Background" Value="Transparent"/>
            <Set Target="btnNormal" Property="Foreground" Value="#6B7280"/>
            <Set Target="btnFast" Property="Background" Value="Transparent"/>
            <Set Target="btnFast" Property="Foreground" Value="#6B7280"/>
            <Toast Message="Speed: 0.5x (Slow)" Type="Info" Position="BottomRight" Duration="1500"/>
        </Handler>

        <Handler Name="SetSpeedNormal">
            <Set Var="animSpeed" Value="500"/>
            <Set Target="lblDuration" Property="Text" Value="500ms"/>
            <Set Target="btnSlow" Property="Background" Value="Transparent"/>
            <Set Target="btnSlow" Property="Foreground" Value="#6B7280"/>
            <Set Target="btnNormal" Property="Background" Value="#8B5CF6"/>
            <Set Target="btnNormal" Property="Foreground" Value="White"/>
            <Set Target="btnFast" Property="Background" Value="Transparent"/>
            <Set Target="btnFast" Property="Foreground" Value="#6B7280"/>
            <Toast Message="Speed: 1x (Normal)" Type="Info" Position="BottomRight" Duration="1500"/>
        </Handler>

        <Handler Name="SetSpeedFast">
            <Set Var="animSpeed" Value="250"/>
            <Set Target="lblDuration" Property="Text" Value="250ms"/>
            <Set Target="btnSlow" Property="Background" Value="Transparent"/>
            <Set Target="btnSlow" Property="Foreground" Value="#6B7280"/>
            <Set Target="btnNormal" Property="Background" Value="Transparent"/>
            <Set Target="btnNormal" Property="Foreground" Value="#6B7280"/>
            <Set Target="btnFast" Property="Background" Value="#8B5CF6"/>
            <Set Target="btnFast" Property="Foreground" Value="White"/>
            <Toast Message="Speed: 2x (Fast)" Type="Info" Position="BottomRight" Duration="1500"/>
        </Handler>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--        ANIMATION: FADE             -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Handler Name="AnimateFade">
            <Set Target="lblAnimTitle" Property="Text" Value="Fade Animation"/>
            <Set Target="lblAnimDesc" Property="Text" Value="Opacity transition from 0 to 1"/>
            <Set Target="lblProperty" Property="Text" Value="Opacity"/>
            <Set Target="lblEasing" Property="Text" Value="EaseInOut"/>
            <Set Target="animEmoji" Property="Text" Value="ðŸ‘»"/>
            <Set Target="animLabel" Property="Text" Value="Fade"/>
            <Set Target="animBox" Property="Background" Value="#8B5CF6"/>

            <Increment Var="playCount" By="1"/>
            <Set Target="lblPlayCount" Property="Text" Value="{playCount}"/>

            <Set Target="lblStatus" Property="Text" Value="Playing..."/>
            <Set Target="statusDot" Property="Background" Value="#F59E0B"/>

            <!-- Fade Out -->
            <Animate Control="animBox" Property="Opacity" To="0" Duration="{animSpeed}"/>
            
            <!-- Wait and Fade In -->
            <Delay Duration="{animSpeed}"/>
            <Animate Control="animBox" Property="Opacity" To="1" Duration="{animSpeed}"/>

            <Delay Duration="{animSpeed}"/>
            <Set Target="lblStatus" Property="Text" Value="Completed"/>
            <Set Target="statusDot" Property="Background" Value="#10B981"/>
        </Handler>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--        ANIMATION: SCALE            -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Handler Name="AnimateScale">
            <Set Target="lblAnimTitle" Property="Text" Value="Scale Animation"/>
            <Set Target="lblAnimDesc" Property="Text" Value="Size transformation effect"/>
            <Set Target="lblProperty" Property="Text" Value="Scale"/>
            <Set Target="lblEasing" Property="Text" Value="EaseOut"/>
            <Set Target="animEmoji" Property="Text" Value="ðŸ”"/>
            <Set Target="animLabel" Property="Text" Value="Scale"/>
            <Set Target="animBox" Property="Background" Value="#3B82F6"/>

            <Increment Var="playCount" By="1"/>
            <Set Target="lblPlayCount" Property="Text" Value="{playCount}"/>

            <Set Target="lblStatus" Property="Text" Value="Playing..."/>
            <Set Target="statusDot" Property="Background" Value="#F59E0B"/>

            <!-- Scale Up -->
            <Animate Control="animBox" Property="Width" To="200" Duration="{animSpeed}"/>
            <Animate Control="animBox" Property="Height" To="200" Duration="{animSpeed}"/>

            <Delay Duration="{animSpeed}"/>

            <!-- Scale Down -->
            <Animate Control="animBox" Property="Width" To="150" Duration="{animSpeed}"/>
            <Animate Control="animBox" Property="Height" To="150" Duration="{animSpeed}"/>

            <Delay Duration="{animSpeed}"/>
            <Set Target="lblStatus" Property="Text" Value="Completed"/>
            <Set Target="statusDot" Property="Background" Value="#10B981"/>
        </Handler>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!--        ANIMATION: ROTATE           -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Handler Name="AnimateRotate">
            <Set Target="lblAnimTitle" Property="Text" Value="Rotate Animation"/>
            <Set Target="lblAnimDesc" Property="Text" Value="360Â° rotation effect"/>
            <Set Target="lblProperty" Property="Text" Value="Rotation"/>
            <Set Target="lblEasing" Property="Text" Value="Linear"/>
            <Set Target="animEmoji" Property="Text" Value="ðŸ”„"/>
            <Set Target="animLabel" Property="Text" Value="Rotate"/>
            <Set Target="animBox" Property="Background" Value="#10B981"/>

            <Increment Var="playCount" By="1"/>
            <Set Target="lblPlayCount" Property="Text" Value="{playCount}"/>

            <Set Target="lblStatus" Property="Text" Value="Playing..."/>
            <Set Target="statusDot" Property="Background" Value="#F59E0B"/>

            <!-- Rotate 360 -->
            <Animate Control="animBox" Property="Rotation" To="360" Duration="1000"/>

