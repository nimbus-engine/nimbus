     OnLoad="OnAppLoad">

    <UI>
        <Grid Background="#0A0A0F">
            <Grid.ColumnDefinitions>280, *</Grid.ColumnDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!--              LEFT SIDEBAR               -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Column="0" Background="#12121A"
                    BorderBrush="#1E1E2E" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>Auto, *, Auto</Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Padding="20,24,20,20"
                            BorderBrush="#1E1E2E" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ¬" FontSize="28" Margin="0,0,12,0"/>
