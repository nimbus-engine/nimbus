                    </Border>

                    <!-- Animation Controls -->
                    <ScrollViewer Grid.Row="1" Padding="16,16,16,0">
                        <StackPanel>
                            
                            <!-- Section: Basic -->
                            <TextBlock Text="BASIC ANIMATIONS" FontSize="10" 
                                       FontWeight="Bold" Foreground="#6B7280"
